@model BaiKiemTra03.Models.Book

<div class="container">
    <h3>Bạn có chắc chắn muốn xóa sách này?</h3>
    <form method="post" asp-action="DeleteConfirm">
        <!-- Mã sách (ID) ẩn -->
        <input asp-for="BookId" type="hidden" />

        <!-- Validation summary -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Tiêu đề sách -->
        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" type="text" class="form-control" readonly />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Năm xuất bản -->
        <div class="form-group">
            <label asp-for="PublicationYear">Năm xuất bản</label>
            <input asp-for="PublicationYear" type="text" class="form-control" readonly />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>

        <!-- Thể loại sách -->
        <div class="form-group">
            <label asp-for="Genre">Thể loại</label>
            <input asp-for="Genre" type="text" class="form-control" readonly />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <!-- Tác giả -->
        <div class="form-group">
            <label asp-for="Author.AuthorName">Tác giả</label>
            <input asp-for="Author.AuthorName" type="text" class="form-control" readonly />
            <span asp-validation-for="Author.AuthorName" class="text-danger"></span>
        </div>

        <!-- Nút Xóa và Hủy -->
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
