@{
    ViewData["Title"] = "Create Book";
}
@model BaiKiemTra03.Models.Book

<div class="container">
    <h3>Thêm mới sách</h3>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Tiêu đề sách -->
        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" type="text" class="form-control" placeholder="Nhập tiêu đề sách" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Năm xuất bản -->
        <div class="form-group">
            <label asp-for="PublicationYear">Năm xuất bản</label>
            <input asp-for="PublicationYear" type="number" class="form-control" placeholder="Nhập năm xuất bản" min="1000" max="9999" required />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>

        <!-- Thể loại sách -->
        <div class="form-group">
            <label asp-for="Genre">Thể loại</label>
            <input asp-for="Genre" type="text" class="form-control" placeholder="Nhập thể loại sách" required />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <!-- Tác giả (mã tác giả) -->
        <div class="form-group">
    <label asp-for="AuthorId">Tác giả</label>
    <select asp-for="AuthorId" class="form-control" required>
        <option value="">Chọn tác giả</option>
        @foreach (var author in ViewBag.Authors)
        {
            <option value="@author.AuthorId">
                @author.AuthorName
            </option>
        }
    </select>
    <span asp-validation-for="AuthorId" class="text-danger"></span>
</div>

        <button type="submit" class="btn btn-primary">Tạo mới</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
