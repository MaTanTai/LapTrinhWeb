@model BaiKiemTra03_02.Models.Book
<div class="container">
    <h3>Bạn có chắc chắn muốn xóa sách này?</h3>
    <form method="post" asp-action="DeleteConfirm">
        <input asp-for="BookId" type="hidden" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" type="text" class="form-control" disabled />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PublicationYear">Năm xuất bản</label>
            <input asp-for="PublicationYear" type="number" class="form-control" disabled />
            <span asp-validation-for="PublicationYear" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Genre">Thể loại</label>
            <input asp-for="Genre" type="text" class="form-control" disabled />
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AuthorId">Tác giả</label>
            <input asp-for="AuthorId" type="text" class="form-control" disabled />
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
